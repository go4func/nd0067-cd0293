    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^5.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^7.14.7",
